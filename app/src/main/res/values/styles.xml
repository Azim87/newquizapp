<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/colorWhite</item>
        <item name="android:colorBackground">@color/colorWhite</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="Splash_screen" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:statusBarColor" tools:targetApi="m">#FFF</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTitles" parent="AppTheme.BigTitleText">
        <item name="android:textColor">@color/colorTitle</item>
        <item name="android:textSize">@dimen/appTitle</item>
        <item name="android:layout_marginTop">@dimen/appTitleMarginTop</item>
        <item name="android:layout_marginStart">@dimen/appTitleMarginStart</item>
    </style>

    <style name="HistoryItemCategory" parent="AppTheme.Bold">
        <item name="android:textColor">@color/colorTitle</item>
        <item name="android:textSize">@dimen/historyCatTitle</item>
    </style>

    <style name="SkipButton" parent="AppTheme.Heavy">
        <item name="android:background">@drawable/skip_button_style</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_marginBottom">80dp</item>
        <item name="android:paddingRight">13dp</item>
        <item name="android:paddingLeft">13dp</item>
    </style>

    <style name="AppTheme.BigTitleText">
        <item name="android:fontFamily">@font/sftext_bold</item>
    </style>
    <style name="AppTheme.SemiBold">
        <item name="android:fontFamily">@font/sftext_semibold</item>
    </style>
    <style name="AppTheme.Bold">
        <item name="android:fontFamily">@font/sfdisplay_bold</item>
    </style>
    <style name="AppTheme.Thin">
        <item name="android:fontFamily">@font/sftext_light</item>
    </style>

    <style name="AppTheme.Heavy">
        <item name="android:fontFamily">@font/sftext_heavy</item>
    </style>
</resources>
