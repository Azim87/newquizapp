<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/colorWhite</item>
        <item name="android:colorBackground">@color/colorWhite</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="Splash_screen" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:statusBarColor" tools:targetApi="m">#FFF</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTitles">
        <item name="android:textColor">@color/colorTitle</item>
        <item name="android:fontFamily">@font/sftext_bold</item>
        <item name="android:textSize">@dimen/appTitle</item>
        <item name="android:layout_marginTop">@dimen/appTitleMarginTop</item>
        <item name="android:layout_marginStart">@dimen/appTitleMarginStart</item>
    </style>
</resources>
